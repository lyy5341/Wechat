/* pages/home/index.wxss */
/* 轮播图 */
  swiper{
    touch-action: none;
    width: 100%;
    height: 190px;
  }
  .slide-image{
    position: absolute;
    width: 100%;
    height: 100%;
  } 
/* 广告图片 */
  .boy-show{
    margin-top: 10px;
  } 
  .boy-show image{
    width: 100%;
  }
  .boy-show video{
    width: 100%;
  } 

/* 商品列表 */
  .boy-list-title{
    text-align: center;
    font-size: 16px;
    height: 50px;
    margin: 15px 0;
    background: url(https://api.25boy.cn/Public/images/title-line.jpg) no-repeat bottom center;
  }
  .boy-list{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around
  }
  .boy-list-item{
    width: 45%;
    font-size: 16px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .boy-list-item image{
    width: 100%;
  }
  