/* pages/detail/detail.wxss */
page{
  height: 100%;
}
 .boy-scroll{
   height: 100%;
 }
.goods-pic image{
  width: 100%;
  height: 375px;
}
.padding{
   padding: 0 10px;
   font-size: 14px;
}
.goods-name{
  font-weight: bold;
  font-size: 18px;
}
.goods-name text{
  margin-right: 10px;
}
.goods-price{
  font-size: 25px;
  font-weight: bold;
  color: #b01f23;
  margin-bottom: 10px;
}
/*选项*/

.border{
  border-top: 1px solid #eee;
  height: 50px;
  line-height: 50px;
}
.color-text{
  margin-right: 10px;
  border: 1px solid #eee;
  border-radius: 20%;
  width: 30px;
  height: 30px;
  padding: 5px;
}
.left{
  border: 2px solid #eee;
  border-radius: 20%;
  padding:6px 12px;
}
.count{
  border: 2px solid #eee;
  border-radius: 10%;
  padding:6px 40px;
  margin: 0 8px;
}
.margin{
  margin-right: 20px;
}
.bottom{
   margin-bottom: 60px;
}
/*尾部*/
.goods-buybar-flex{
  width: 100%;
  height: 60px;
  position: fixed;
  bottom: 0;
}
.goods-buybar{
  height: 60px;
  background: #f2f2f2;
  box-shadow: 0px 0px 6px rgba(0,0,0,0.3);
  font-size: 12px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.goods-buybar view{
  width: 16%;
  height: 60px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #666;
}
navigator{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  color: #666;
}
.goods-buybar view image{
  width: 50rpx;
  height: 45rpx;
}
.goods-addCart{
  width: 26% !important;
  height: 100%;
  background-color: #e93c3e;
  color: #fff !important;
}
.goods-toBuy{
  width: 26% !important;
   height: 100%;
  background-color: #b01f23;
  color: #fff !important;
}